    "logic_lines": {
      "pilot_logic_line": {
        "description": "虚拟飞行员的决策和操作的逻辑线",
        "line_type": "intelligent_decision_making",
        "logic_sequence": [
          {
            "event_id": 1,
            "event_name": "TaxiClearanceReceived",
            "description": "收到滑行许可",
            "trigger_condition": {
              "condition_expression": "taxi_clearance_received",
              "description": "收到ATC滑行许可"
            },
            "driven_process": {
              "controller_type": "Pilot_Manual_Control",
              "controller_name": "TrottlePush2Max",
              "description": "推油门控制",
              "termination_condition":"Throttle = 1"
            }

          },
          {
            "event_id": 2,
            "event_name": "StartCruise",
            "description": "决定开始匀速滑行",
            "trigger_condition": {
              "condition_expression": "speed > 19.0",
              "description": "接近目标滑行速度"
            },
            "driven_process": {
              "controller_type": "Pilot_Flight_Task_Control",
              "controller_name": "MaintainSPDRunway",
              "description": "在跑道上匀速滑行",
              "termination_condition":"maintain"
            }

          },
          {
            "event_id": 3,
            "event_name": "StartBraking",
            "description": "决定开始刹车",
            "trigger_condition": {
              "condition_expression": "distance > 900.0 || atc_brake_command_received",
              "description": "到达制动决策点或收到ATC紧急刹车指令"
            },
            "driven_process": {
              "controller_type": "Pilot_Manual_Control",
              "controller_name": "BrakePush2Max",
              "description": "应用最大刹车力",
              "termination_condition":"Brake = 1"
            }

          }
        ]
      },
      
      "aircraft_system_logic_line": {
        "description": "飞机各系统的状态变化和控制的逻辑线",
        "line_type": "system_coordination",
        "logic_sequence": [
          {
            "event_id": 1,
            "event_name": "EncounterLeftEngineOut",
            "description": "遭遇左发动机失效",
            "trigger_condition": {
              "condition_expression": "distance > 100.0",
              "description": "飞机刚滑行100米就遇到左发动机失效"
            },
            "driven_process": {
              "controller_type": "Aircraft_Sysytem_State_Shift",
              "controller_name": "LeftEngineOut",
              "description": "左发动机失效",
              "termination_condition":"maintain"
            }
          },
          {
            "event_id": 2,
            "event_name": "EncounterBreakHalf",
            "description": "遭遇刹车效率降低",
            "trigger_condition": {
              "condition_expression": "distance > 1000.0",
              "description": "飞机刚滑行1000米就遇到刹车效率降低"
            },
            "driven_process": {
              "controller_type": "Aircraft_Sysytem_State_Shift",
              "controller_name": "BreakHalf",
              "description": "刹车效率降低",
              "termination_condition":"maintain "
            }
          }
        ]
      },
      
      "environment_logic_line": {
        "description": "环境条件的变化和影响的逻辑线",
        "line_type": "environmental_dynamics",
        "logic_sequence": [
          {
            "event_id": 1,
            "event_name": "EncounterRunwayConditionChange",
            "description": "遭遇跑道条件变化",
            "trigger_condition": {
              "condition_expression": "distance > 300.0",
              "description": "飞机刚滑行300米就遭遇湿滑跑道"
            },
            "driven_process": {
              "controller_type": "Environment_State_Shift",
              "controller_name": "RunwayConditionChange",
              "description": "跑道条件变化",
              "termination_condition":"maintain"
            }
          }
        ]
      },
      
      "ATC_logic_line": {
        "description": "空中交通管制和实验监控的逻辑线",
        "line_type": "atc_control",
        "logic_sequence": [
          {
            "event_id": 1,
            "event_name": "IssueTaxiClearance",
            "description": "发放滑行许可", 
            "trigger_condition": {
              "condition_expression": "time > 1.0",
              "description": "开始1秒后"
            },
            "driven_process": {
              "controller_type": "ATC_command",
              "controller_name": "ClearanceController",
              "description": "ATC发放滑行许可",
              "termination_condition":"maintain"
            }
          },
          {
            "event_id": 2,
            "event_name": "EmergencyBrakeCommand",
            "description": "紧急刹车指令",
            "trigger_condition": {
              "condition_expression": "distance > 1200.0",
              "description": "飞机刚滑行到1200米必须紧急刹车"
            },
            "driven_process": {
              "controller_type": "ATC_command",
              "controller_name": "EmergencyBrakeCommand",
              "description": "紧急刹车指令",
              "termination_condition":"maintain"
            }
          }
        ]
      }
    }
